@model OAuth20.Server.Models.AccountViewModels.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-top:30px;margin-bottom:130px">
    <div class="row justify-content-md-center" style="margin-top:130px;">
        <div class="col-md-5">
            <div class="card">
                <h5 class="card-header bg-dark text-white">Forgot Password</h5>
                <div class="card-body">
                    <form asp-action="ForgotPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




